    "install": "^0.13.0",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "npm": "^10.7.0",
    "react-hook-form": "^7.51.4",
    "react-input-mask": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
