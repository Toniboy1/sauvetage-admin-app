    "dayjs": "^1.11.11",
    "dexie": "^4.0.4",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.5.0",
