{
  "private": true,
  "name": "sauvetage-admin-app",
  "description": "App to handle forms",
  "version": "1.0.17",
  "author": "Anthony Fasano",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "fix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --write .",
    "postinstall": "electron-builder install-app-deps",
    "doc": "npx typedoc",
    "prepare": "husky install",
    "release": "electron-builder",
    "publish": "electron-builder",
    "test-ci": "jest --ci --coverage",
    "cypress:open": "cypress open ",
    "next": "next dev ./renderer -p 8888",
    "next:build": "next build ./renderer",
    "next:start": "next start ./renderer -p 8888",
    "capacitor:build":"CAPACITOR=true next build ./renderer",
    "capcitor:run:ios":"npx cap open ios",
    "capcitor:run:android":"npx cap open android",
    "capacitor:sync":"npx cap sync",
    "capacitor:copy":"npx cap copy",
    "xcode":"npx cap open ios"
  },
  "build": {
    "appId": "com.anthonyfasano.sauvetage-admin-app",
    "productName": "Sauvetage Administration",
    "copyright": "Copyright Â© 2024 Anthony Fasano",
    "mac": {
      "icon": "main/resources/icon.icns",
      "category": "public.app-category.utilities",
      "target": "dmg",
      "publish": [
        {
          "provider": "github",
          "owner": "Toniboy1",
          "repo": "sauvetage-admin-app"
        }
      ]
    },
    "win": {
      "icon": "main/resources/icon.ico",
      "target": "nsis",
      "publisherName": "Anthony Fasano",
      "publish": [
        {
          "provider": "github",
          "owner": "Toniboy1",
          "repo": "sauvetage-admin-app"
        }
      ]
    },
    "nsis": {
      "oneClick": false
    },
    "directories": {
      "output": "dist",
      "buildResources": "main/resources"
    }
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@mui/x-date-pickers": "^7.3.2",
    "@react-input/mask": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "blob-polyfill": "^7.0.20220408",
    "custom-electron-titlebar": "^4.2.8",
    "dayjs": "^1.11.11",
    "dexie": "^4.0.4",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.5.0",
    "html2canvas": "^1.4.1",
    "husky": "^9.0.11",
    "indexeddb-export-import": "^2.1.5",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "npm": "^10.7.0",
    "react-hook-form": "^7.51.4",
    "structured-clone": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@capacitor/cli": "^6.0.0",
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.11.5",
    "@jest/globals": "^29.7.0",
    "@mui/icons-material": "^5.15.15",
    "@mui/material": "^5.15.15",
    "@mui/material-nextjs": "^5.15.11",
    "@next/eslint-plugin-next": "^14.2.3",
    "@saswatb/eslint-plugin-sort-sx-prop": "^0.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@typescript-eslint/parser": "^7.8.0",
    "babel-jest": "^29.7.0",
    "cypress": "^13.9.0",
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.1.2",
    "eslint-plugin-jsdoc": "^48.2.3",
    "eslint-plugin-mui-unused-classes": "^2.0.2",
    "eslint-plugin-tss-unused-classes": "^1.0.2",
    "eslint-plugin-tss-unused-makestyles": "^0.0.1",
    "fake-indexeddb": "^5.0.2",
    "grunt-bump": "^0.8.0",
    "grunt-cli": "^1.4.3",
    "grunt-jest": "^0.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.3",
    "lint-staged": "^15.2.2",
    "next": "^13.5.6",
    "nextron": "^8.15.0",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
